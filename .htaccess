# BlogSpace - Apache Configuration for XAMPP

# Security and URL rewriting rules

# Enable rewrite engine

RewriteEngine On

# CORS Headers for API requests

<IfModule mod_headers.c>
    # CORS headers
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, X-CSRF-Token"
    Header always set Access-Control-Max-Age "3600"
    
    # Security Headers
    Header always set X-Content-Type-Options nosniff
    Header always set X-XSS-Protection "1; mode=block"
    Header always set X-Frame-Options SAMEORIGIN
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Handle CORS preflight requests

RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.\*)$ $1 [R=200,L]

# URL Rewriting for clean URLs

# Redirect to Frontend/home/ for root access

RewriteRule ^$ Frontend/home/home.html [L]
RewriteRule ^index.php$ Frontend/home/home.html [L]

# Clean URLs for frontend pages

RewriteRule ^home/?$ Frontend/home/home.html [L]
RewriteRule ^login/?$ Frontend/login/login.html [L]
RewriteRule ^signup/?$ Frontend/sign-up/sign-up.html [L]
RewriteRule ^register/?$ Frontend/sign-up/sign-up.html [L]
RewriteRule ^create-post/?$ Frontend/create-post/create-post.html [L]
RewriteRule ^write/?$ Frontend/create-post/create-post.html [L]

# API Routes - ensure they work properly

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^api/(.\*)$ Backend/api/$1 [L,QSA]

# Protect sensitive directories and files

<FilesMatch "(^#._#|\.(bak|config|sql|fla|psd|ini|log|sh|inc|swp|dist)|~)$">
Order allow,deny
Deny from all
Satisfy All
</FilesMatch>
<Files "_.php">
Order allow,deny
Allow from all
</Files>

<Files "config/\*">
Order deny,allow
Deny from all
</Files>

<Files ".env">
Order deny,allow
Deny from all
</Files>
